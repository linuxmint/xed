    <description>ordered list</description>
    <accelerator/>
  </snippet>
  <snippet id="listitem">
    <text><![CDATA[<listitem>
  <para>${1}</para>
</listitem>]]></text>
    <tag>li</tag>
    <description>list item</description>
    <accelerator/>
